{
  "include": ["src"],
  "exclude": ["node_modules", "types"],
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "outDir": "types",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "lib": ["ES2022", "DOM"],
    "target": "ES2022",
    "baseUrl": ".",
    "paths": {
      "@web3-storage/content-claims/*": ["../core/src/*"]
    }
  }
}
